<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/shape_titlebar_bg_color"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:text="@string/car_type"
                    android:textSize="14sp"
                    android:textColor="@color/title_text_color"
                    android:layout_marginLeft="15dp"/>
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/input_car_type"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:layout_marginRight="15dp"
                    android:inputType="text"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:text="@string/axles_num"
                    android:textSize="14sp"
                    android:textColor="@color/title_text_color"
                    android:layout_marginLeft="15dp"/>
                <EditText
                    android:id="@+id/et_axles_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/input_axles_num"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:layout_marginRight="15dp"
                    android:inputType="number"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:text="@string/pre_check_value"
                    android:textSize="14sp"
                    android:textColor="@color/title_text_color"
                    android:layout_marginLeft="15dp"/>
                <EditText
                    android:id="@+id/et_pre_check_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/input_pre_check_value"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:text="@string/inspection_limit"
                    android:textSize="14sp"
                    android:textColor="@color/title_text_color"
                    android:layout_marginLeft="15dp"/>
                <EditText
                    android:id="@+id/et_check_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/input_inspection_limit"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:text="是否是超限参考值"
                    android:textSize="14sp"
                    android:textColor="@color/title_text_color"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <CheckBox
                    android:id="@+id/cb_yes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_yes"
                    android:layout_centerInParent="true"/>
                <CheckBox
                    android:id="@+id/cb_no1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_no"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/cb_yes1"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:text="LED是否显示"
                    android:textSize="14sp"
                    android:textColor="@color/title_text_color"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <CheckBox
                    android:id="@+id/cb_yes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_yes"
                    android:layout_centerInParent="true"/>
                <CheckBox
                    android:id="@+id/cb_no2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_no"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/cb_yes2"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"/>

            <Button
                android:id="@+id/btn_complete"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/complete"
                android:background="@drawable/shape_defult_button_bg"
                android:textColor="@color/white"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="35dp"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
