<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <Button
                android:id="@+id/btn_time"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="@string/time_interval"
                android:background="@drawable/selector_echart_btn_bg"
                android:layout_marginRight="7dp"
                android:textColor="@drawable/selector_echart_text_color"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/btn_day"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="@string/day_interval"
                android:background="@drawable/selector_echart_btn_bg"
                android:textColor="@drawable/selector_echart_text_color"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/btn_week"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="@string/week_interval"
                android:background="@drawable/selector_echart_btn_bg"
                android:textColor="@drawable/selector_echart_text_color"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:textSize="14sp"/>
            <Button
                android:id="@+id/btn_month"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="@string/month_interval"
                android:background="@drawable/selector_echart_btn_bg"
                android:textColor="@drawable/selector_echart_text_color"
                android:layout_marginLeft="7dp"
                android:textSize="14sp"/>

        </LinearLayout>


    </RelativeLayout>

    <com.tikeyc.tandroidechartlibrary.TEChartWebView
        android:id="@+id/barChartWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
